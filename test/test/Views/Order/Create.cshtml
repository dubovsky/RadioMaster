@model test.Заказы

@{
    ViewBag.Title = "Order Addition";
    Layout = "~/Views/Order/_LayoutPageOrder.cshtml";
}

<h2>ДОБАВЛЕНИЕ НОВОЙ ЗАЯВКИ НА РЕМОНТ</h2>

<br />
@using (Html.BeginForm()) 
