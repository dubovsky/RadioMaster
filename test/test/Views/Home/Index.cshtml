@{
    ViewBag.Title = "Домашняя УММ Сервис";
}
<!-- The overlay -->
<div id="myNav" class="overlay">

    <!-- Button to close the overlay navigation -->
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>

    <!-- Overlay content -->
    <div class="overlay-content">
        @Html.ActionLink("Войти", "Login", "Account")
        @Html.ActionLink("Инфо", "About", "Home")
        @Html.ActionLink("Проверить состояние заявки", "State", "Order") 
        @Html.ActionLink("Контакты", "Contact", "Home")  
    </div>

</div>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-sm-4 col-md-offset-5 col-sm-offset-5">
            <!-- Use any element to open/show the overlay navigation menu -->
            <div class="btn btn-success" onclick="openNav()">НАЧАТЬ РАБОТУ С САЙТОМ</div>
        </div>
    </div>
</div>
<br />

                                    @* карусель *@
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                   
                    <div class="carousel-inner" role="listbox">                   
                        <div class="item active">
                            <div class="carousel-caption">
                                <h5>РЕМОНТ МОБИЛЬНЫХ ТЕЛЕФОНОВ И РАДИОСТАНЦИЙ</h5>
                            </div>
                            <div class="img-two"></div>                    
                        </div>
                        <div class="item">
                            <div class="carousel-caption">
                                <h5>РЕМОНТ ПЛАТ</h5>
                            </div>
                            <div class="img-three"></div>                           
                        </div>                      
                        <div class="item">
                            <div class="carousel-caption">
                                <h5>РАЗБИТЫЙ ДИСПЛЕЙ</h5>
                            </div>
                            <div class="img-five"></div>
                        </div>                      
                        <div class="item">
                            <div class="carousel-caption">
                                <h5>ДИСПЛЕЙ ПОСЛЕ РЕМОНТА</h5>
                            </div>
                            <div class="img-six"></div>
                        </div>
                        <div class="item">
                            <div class="carousel-caption">
                                <h5>РЕМОНТ И НАЛАДКА РАДИОСТАНЦИЙ</h5>
                            </div>
                            <div class="img-seven"></div>
                        </div>
                        <div class="item">
                            <div class="carousel-caption">
                                <h5>ЗАМЕНА КОМПЛЕКТУЮЩИХ</h5>
                            </div>
                            <div class="img-nine"></div>
                        </div>
                    </div>
                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
   
<div class="card-group">
    <div class="card bg-info text-white mb-3 text-center">
        <div class="card-header">Предоставляемые услуги</div>
        
            <div class="card-body">
                <h4>Качественный ремонт телефонной и радио аппаратуры</h4>
            </div>
        
    </div>
    <div class="card bg-info text-white mb-3 text-center">
        <div class="card-header">Гарантии качества</div>

        <div class="card-body">
            <h4>Мы можем гарантировать наилучшее качество производимых работ по ремонту аппаратуры, иначе мы вернем деньги</h4>
        </div>

    </div>
    <div class="card bg-info text-white mb-3 text-center">
        <div class="card-header">Сроки ремонта</div>

        <div class="card-body">
            <h4>Минимальное количество времени на ремонт</h4>
        </div>

    </div>
</div> 
<script>
@* Open when someone clicks on the span element *@
function openNav() {
   document.getElementById("myNav").style.width = "100%";
}

@* Close when someone clicks on the "x" symbol inside the overlay *@
function closeNav() {
    document.getElementById("myNav").style.width = "0%";
    }

   


</script>
